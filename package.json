{
  "name": "populus",
  "version": "1.0.0",
  "engines": {
    "node": "12.16.x"
  },
  "description": "Simple social media site using NodeJS, ExpressJS, MongoDB, React Native, and GraphQL",
  "main": "server.js",
  "dependencies": {
    "bcrypt": "^3.0.7",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^15.0.0",
    "if-env": "^1.0.4",
    "mongoose": "^5.7.13",
    "passport": "^0.4.1",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "nodemon": "^1.19.4"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndrewBrooking/Populus.git"
  },
  "author": "Andrew Brooking",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/AndrewBrooking/Populus/issues"
  },
  "homepage": ""
}
